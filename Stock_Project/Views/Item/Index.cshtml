@model IEnumerable<Stock_Project.Models.Item>
<link rel="stylesheet" href="~/css/StoreStyleSheet.css" />
<div>
    <img src="~/Images/5da8f03dcd736c9a9bd73a412be8e45c-factory-warehouse-digital-illustration-removebg-preview.png" />
</div>
<a href="/item/create" class="createButton" id="createBtn">Create</a>
<a href="/home" class="btn btn-outline-secondary float-end" style="margin-top:10px">Home</a>
<div class="container">
    <div class="row formContainer">
        <div class="col-6 ">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(Model => Model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr onclick="window.location.href='@Url.Action("Details",new{id = item.Id})';" style="cursor: pointer">
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/StoreIndexScript.js"></script>
